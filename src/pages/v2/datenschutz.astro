---
import V2Layout from '../../layouts/V2Layout.astro';
import Card from '../../components/v2/ui/Card.astro';
import Button from '../../components/v2/ui/Button.astro';
import { Shield, ArrowRight } from '@lucide/astro';
import datenschutzHtml from '../../partials/datenschutz.html?raw';

const DISCORD_URL = 'https://discord.minecraft-gilde.de';
---

<V2Layout
  title="Minecraft Gilde – Datenschutz (v2)"
  canonical="https://minecraft-gilde.de/v2/datenschutz"
  description="Datenschutzerklärung der Minecraft Gilde."
>
  <section class="v2-container pt-12 pb-6">
    <div class="flex items-start gap-3">
      <Shield size={22} />
      <div>
        <h1 class="text-3xl font-semibold tracking-tight">Datenschutz</h1>
        <p class="text-muted mt-2">Datenschutzerklärung für Website &amp; Minecraft-Server.</p>
      </div>
    </div>
    <div class="mt-6 flex flex-wrap gap-3">
      <Button href={DISCORD_URL} external variant="secondary" class="gap-2">
        Discord <ArrowRight size={18} />
      </Button>
      <Button href="/v2/impressum" variant="ghost">Impressum</Button>
    </div>
  </section>

  <section class="v2-container pb-16">
    <Card class="p-6">
      <div class="v2-prose" set:html={datenschutzHtml} />
    </Card>
  </section>
</V2Layout>
