---
export type CardVariant = 'glass' | 'solid';

export interface Props {
  variant?: CardVariant;
  class?: string;
}

const { variant = 'glass', class: className = '' } = Astro.props as Props;

const variants: Record<CardVariant, string> = {
  glass: 'glass shadow-sm',
  solid: 'bg-surface-solid border border-border shadow-sm',
};
---

<div class={`${variants[variant]} rounded-[var(--radius)] ${className}`.trim()}>
  <slot />
</div>
