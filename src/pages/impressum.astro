---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import { Scale, ArrowRight } from '@lucide/astro';
import impressumHtml from '../../partials/impressum.html?raw';

const DISCORD_URL = 'https://discord.minecraft-gilde.de';
---

<BaseLayout
  title="Minecraft Gilde - Impressum"
  canonical="https://minecraft-gilde.de/impressum.html"
  description="Erlebe Freebuild & Survival in der Minecraft Gilde! Keine Minigames \u2013 reines Vanilla-Gameplay. Tritt jetzt bei! IP: minecraft-gilde.de"
>
  <section class="mg-container pt-12 pb-16">
    <div class="flex items-start gap-3">
      <Scale size={22} />
      <div>
        <h1 class="text-3xl font-semibold tracking-tight">Impressum</h1>
        <p class="text-muted mt-2">Angaben gemäß §5 DDG.</p>
      </div>
    </div>

    <div class="mt-6 flex flex-wrap gap-3">
      <Button href={DISCORD_URL} external variant="secondary" class="gap-2">
        Discord <ArrowRight size={18} />
      </Button>
    </div>

    <Card class="mt-6 p-6">
      <div class="mg-prose" set:html={impressumHtml} />
    </Card>
  </section>
</BaseLayout>
