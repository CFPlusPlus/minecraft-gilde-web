---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import { Home, TriangleAlert } from '@lucide/astro';
---

<BaseLayout
  title="Minecraft Gilde - Seite nicht gefunden"
  description="Diese Seite gibt es nicht (404)."
  noindex={true}
>
  <section class="mg-container pt-16 pb-16">
    <div class="mx-auto max-w-2xl">
      <div class="mg-card p-8">
        <div class="flex items-start gap-4">
          <div
            class="bg-accent/15 text-fg inline-flex h-10 w-10 items-center justify-center rounded-xl"
          >
            <TriangleAlert size={20} />
          </div>
          <div>
            <h1 class="text-3xl font-semibold tracking-tight">404 â€“ Seite nicht gefunden</h1>
            <p class="text-muted mt-3 leading-relaxed">
              Der Link ist vermutlich veraltet oder du hast dich vertippt.
            </p>

            <div class="mt-6 flex flex-wrap gap-3">
              <Button href="/" variant="primary" class="gap-2">
                <Home size={18} /> Zur Startseite
              </Button>
              <Button href="/tutorial" variant="secondary">Tutorial</Button>
              <Button href="/statistiken" variant="ghost">Statistiken</Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
