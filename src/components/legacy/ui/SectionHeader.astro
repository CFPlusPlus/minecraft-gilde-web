---
export interface Props {
  /** Text shown as server IP / domain */
  serverIp?: string;
  /** Optional description under the title */
  description?: string;
  /** Optional extra classes on the content wrapper */
  contentClass?: string;
  /** Optional raw HTML for the <h1> (useful for highlighted <span>) */
  titleHtml?: string;
}

const {
  serverIp = 'Minecraft-Gilde.de',
  description,
  contentClass = '',
  titleHtml,
} = Astro.props as Props;

const contentClasses = ['content', contentClass].filter(Boolean).join(' ');
---

<section id="header">
  <div class={contentClasses}>
    <div class="info">
      <p class="minecraft-server-ip">{serverIp}</p>
      {
        titleHtml ? (
          <h1 class="title" set:html={titleHtml} />
        ) : (
          <h1 class="title">
            <slot name="title" />
          </h1>
        )
      }
    </div>
    {description ? <p class="description">{description}</p> : null}
  </div>
</section>
